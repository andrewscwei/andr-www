include /includes/button
include /includes/monogram

mixin name-card()
  div(is='name-card')&attributes(attributes)
    section.logo
      +monogram()
    section.name
      h1.full-name #{__('full-name')}
    section.position
      span(type='label').position #{__('roles')}
    section.connect
      if _.get($data, 'identity.length')
        each identity in $data.identity
          +button({ iconClass: _.toLower(identity.medium), iconUrl: identity.image, href: identity.link })
